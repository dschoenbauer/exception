{
    "name": "dschoenbauer/exception",
    "description": "A base set of exceptions for my projects",
    "authors": [
        {
            "name": "David Schoenbauer",
            "email": "dschoenbauer@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.14",
        "satooshi/php-coveralls": "dev-master",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "DSchoenbauer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DSchoenbauer\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "inspect": "phpcs --standard=PSR2 --colors src/",
        "inspect-repair": "phpcbf --standard=PSR2 src/"
    }
}
